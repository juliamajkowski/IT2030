@model List<Trip>
@{
    ViewBag.Title = "My Trip Log";
}

<a asp-controller="Trip" asp-action="Add">Add a Trip</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Destination</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Accomidations</th>
            <th>Things To Do</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var trip in Model)
        {
            <tr>
                <td>@trip.Destination</td>
                <td>@trip.StartDate</td>
                <td>@trip.EndDate</td>
                <td><ul style="list-style-type:none;"> 
                    <li>@trip.Accomidations</li>
                    <li>@trip.AccomidationPhone @trip.AccomidationEmail</li>
                    </ul> </td>
                    <td><ul style="list-style-type:none;"> 
                    <li>@trip.ThingsToDo1</li>
                    <li>@trip.ThingsToDo2</li>
                    <li>@trip.ThingsToDo3</li>
                    </ul> </td>
            </tr>
            
        }
        </tbody>
   </table>

