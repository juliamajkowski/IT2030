@model Trip
@{
    string title = "Add Destination and Dates";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Destination">Destination</label>
        <input asp-for="Destination" class="form-control" required>
    </div>

    <div class="form-group">
        <label asp-for="Accomidations">Accomidations</label>
        <input asp-for="Accomidations" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Start Date</label>
        <input asp-for="StartDate" class="form-control" required>
    </div>

    <div class="form-group">
        <label asp-for="EndDate">End Date</label>
        <input asp-for="EndDate" class="form-control" required>
    </div>

    <input type="hidden" asp-for="Id" />

    <button class="btn btn-primary" type="submit">Next</button>
    <a asp-controller="Home" asp-action="Index"
       class="btn btn-primary">Cancel</a>
</form>
