@model Trip
@{
    if (TempData.ContainsKey("accomidations")){
        string accomidations = @TempData["accomidations"].ToString();
        string title = "Add Info For " + accomidations;
        @TempData["accomidations"] = accomidations;
        ViewBag.Title = title;
    }
    
}

<h2>@ViewBag.Title</h2>

<form asp-action="NextInfo" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="AccomidationPhone">Phone Number</label>
        <input asp-for="AccomidationPhone" class="form-control" required>
    </div>

    <div class="form-group">
        <label asp-for="AccomidationEmail">Email Address</label>
        <input asp-for="AccomidationEmail" class="form-control">
    </div>

    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-primary">Next</button>
    <a asp-controller="Home" asp-action="Index"
       class="btn btn-primary">Cancel</a>
</form>